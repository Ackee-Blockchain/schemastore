{
  "$schema": "../../schemas/json/docker-bake.json",
  "group": {
    "default": {
      "targets": [
        "frontend", "backend"
      ]
    },
    "dev": {
      "targets": [
        "frontend-dev", "backend-dev"
      ]
    }
  },
  "target": {
    "base": {
      "annotations": [
        "com.example.key1=value1",
        "com.example.key2=value2"
      ],
      "args": {
        "ARG1": null
      },
      "attest": [
        "type=sbom"
      ],
      "cache-from": [
        "something"
      ],
      "cache-to": [
        "something"
      ],
      "labels": {
        "label1": "value1",
        "label2": "value2"
      },
      "no-cache": true,
      "no-cache-filter": [
        "type=local,ref=dev"
      ],
      "output": [
        "type=oci,dest=frontend.tar"
      ],
      "platforms": [
        "linux/amd64"
      ],
      "secret": [
        "id=secret1,src=secret1.txt"
      ],
      "shm-size": "1g",
      "pull": true,
      "ssh": [
        "id=ssh1,src=ssh1.txt"
      ],
      "tags": [
        "docker.io/username/frontend:latest"
      ],
      "target": "build",
      "ulimits": [
        "nofile=1024:2048"
      ]
    },
    "frontend": {
      "inherits": ["base"],
      "dockerfile": "frontend/Dockerfile",
      "context": "frontend"
    },
    "frontend-dev": {
      "inherits": ["frontend"],
      "dockerfile": "frontend/Dockerfile-dev"
    },
    "backend": {
      "inherits": ["base"],
      "dockerfile": "backend/Dockerfile",
      "context": "backend"
    },
    "backend-dev": {
      "inherits": ["backend"],
      "dockerfile": "backend/Dockerfile-dev"
    }
  }
}
